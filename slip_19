                    WITH CSV

1.

import pandas as pd
import numpy as np
from sklearn.linear_model import LinearRegression
from sklearn.preprocessing import PolynomialFeatures
import matplotlib.pyplot as plt

# READ CSV
df = pd.read_csv("Salary_positions.csv")

X = df[['Level']]
y = df['Salary']


# SIMPLE LINEAR REGRESSION

lin_reg = LinearRegression()
lin_reg.fit(X, y)


# POLYNOMIAL REGRESSION

poly = PolynomialFeatures(degree=4)
X_poly = poly.fit_transform(X)

poly_reg = LinearRegression()
poly_reg.fit(X_poly, y)


# PREDICT LEVEL 11 & 12

level_11 = poly.transform([[11]])
level_12 = poly.transform([[12]])

print("Linear Regression Prediction (Level 11):", lin_reg.predict([[11]])[0])
print("Linear Regression Prediction (Level 12):", lin_reg.predict([[12]])[0])

print("Polynomial Regression Prediction (Level 11):", poly_reg.predict(level_11)[0])
print("Polynomial Regression Prediction (Level 12):", poly_reg.predict(level_12)[0])

# VISUALIZATION

plt.scatter(X, y, color='blue', label="Actual Data")
plt.plot(X, lin_reg.predict(X), color='red', label="Linear Fit")
plt.plot(X, poly_reg.predict(X_poly), color='green', label="Polynomial Fit (degree 4)")
plt.xlabel("Level")
plt.ylabel("Salary")
plt.legend()
plt.show()
