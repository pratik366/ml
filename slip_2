WITH CSV

1.
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression

# Step 1: Read CSV
df = pd.read_csv("house_price.csv")

# Step 2: Find null values
print("Null values:\n", df.isnull().sum())

# Step 3: Remove null rows
df = df.dropna()

# Step 4: Select features and target
X = df[["Area", "Rooms"]]      # Features
y = df["Price"]                # Target

# Step 5: Split dataset
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2)

# Step 6: Train Linear Regression
model = LinearRegression()
model.fit(X_train, y_train)

# Step 7: Predict and print result
pred = model.predict(X_test)

print("Predicted prices:", pred)
print("Model score (R2):", model.score(X_test, y_test))
----------
2.
import pandas as pd
from sklearn.cluster import AgglomerativeClustering
import matplotlib.pyplot as plt

# Step 1: Read dataset
df = pd.read_csv("wholesale_customers.csv")

# Step 2: Select spending columns
X = df[["Fresh", "Milk", "Grocery", "Frozen", "Detergents_Paper", "Delicassen"]]

# Step 3: Create Agglomerative model
model = AgglomerativeClustering(n_clusters=3)

# Step 4: Fit model and get cluster labels
labels = model.fit_predict(X)

# Add labels to dataset
df["Cluster"] = labels

print(df.head())

# Step 5: Simple scatter plot (Milk vs Grocery)
plt.scatter(df["Milk"], df["Grocery"], c=labels)
plt.xlabel("Milk")
plt.ylabel("Grocery")
plt.title("Agglomerative Clustering Result")
plt.show()
